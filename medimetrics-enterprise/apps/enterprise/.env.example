# Base Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:8000

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/medimetrics
DATABASE_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
CSRF_SECRET=your-csrf-secret-key-change-this

# Security
FIELD_ENCRYPTION_KEK=your-field-encryption-key-change-this
WEBHOOK_HMAC_SECRET=your-webhook-hmac-secret

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=medimetrics
S3_SECRET_KEY=medimetricssecret
S3_REGION=us-east-1
S3_BUCKET_RAW=medimetrics-raw
S3_BUCKET_DERIVATIVES=medimetrics-derivatives
S3_BUCKET_REPORTS=medimetrics-reports

# DICOM
ORTHANC_URL=http://localhost:8042
ORTHANC_USERNAME=orthanc
ORTHANC_PASSWORD=orthanc

# AI Inference
INFERENCE_API_URL=http://localhost:9200
INFERENCE_API_KEY=your-inference-api-key

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=noreply@medimetrics.com

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_URL=http://localhost:3001
SENTRY_DSN=

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_AUDIT_LOGS=true
ENABLE_2FA=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100