# Environment
NODE_ENV=development
LOG_LEVEL=info
TZ=UTC

# Application URLs
WEB_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=medimetrics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgres://postgres:postgres@postgres:5432/medimetrics

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379/0

# S3/MinIO
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=medimetrics
S3_SECRET_KEY=medimetricssecret
S3_REGION=us-east-1
S3_BUCKET_RAW=medimetrics-raw
S3_BUCKET_DERIV=medimetrics-derivatives
S3_BUCKET_REPORTS=medimetrics-reports
S3_FORCE_PATH_STYLE=true

# Orthanc DICOM Server
ORTHANC_URL=http://orthanc:8042
ORTHANC_USER=orthanc
ORTHANC_PASS=orthanc
ORTHANC_AET=MEDIMETRICS

# Security & Auth
JWT_SECRET=change-me-in-production-use-openssl-rand-base64-32
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
CSRF_SECRET=change-me-in-production-use-openssl-rand-base64-32
FIELD_ENCRYPTION_KEK=change-me-in-production-use-openssl-rand-base64-32
WEBHOOK_HMAC_SECRET=change-me-in-production-use-openssl-rand-base64-32
NEXTAUTH_SECRET=change-me-in-production-use-openssl-rand-base64-32
BCRYPT_ROUNDS=12

# 2FA
ENABLE_2FA=true
TOTP_ISSUER=MediMetrics
TOTP_WINDOW=1

# Rate Limiting
RATE_LIMIT_GLOBAL=1000/minute
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_UPLOAD=100/hour
RATE_LIMIT_INFERENCE=50/hour

# CORS
CORS_ORIGINS=http://localhost:3000
CORS_CREDENTIALS=true

# Demo Account
DEMO_ENABLED=true
DEMO_LOGIN=admin@demo.local
DEMO_PASSWORD=Demo123!
SEED_ADMIN_EMAIL=admin@demo.local
SEED_ADMIN_PASSWORD=Demo123!

# Inference Service
INFERENCE_SERVICE_URL=http://inference:9200
INFERENCE_TIMEOUT=300
MAX_WORKERS=4
ENABLE_GPU=false
MODEL_CACHE_DIR=/models
DEFAULT_MODEL=densenet121_chex

# Upload Settings
MAX_FILE_SIZE=5368709120
CHUNK_SIZE=10485760
CONCURRENT_UPLOADS=5
UPLOAD_TIMEOUT=3600

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9100
METRICS_PREFIX=medimetrics

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Features
ENABLE_SWAGGER=true
ENABLE_AUDIT_LOG=true
ENABLE_PHI_REDACTION=true
ENABLE_SIGNED_URLS=true
SIGNED_URL_EXPIRY=3600

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@medimetrics.local

# Backup (Production)
BACKUP_ENABLED=false
BACKUP_S3_BUCKET=medimetrics-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BACKUP_RETENTION_DAYS=30

# Worker Configuration
WORKER_REPLICAS=2
WORKER_MEMORY_LIMIT=4G
QUEUE_MAX_ATTEMPTS=3
QUEUE_BACKOFF_DELAY=60

# Logging
LOG_FORMAT=json
LOG_REDACT_PHI=true
AUDIT_LOG_RETENTION_DAYS=2555

# Performance
DB_POOL_SIZE=20
DB_POOL_MIN=5
CACHE_TTL=3600