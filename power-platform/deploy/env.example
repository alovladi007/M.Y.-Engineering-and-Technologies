GITHUB_CLIENT_SECRET=your-github-client-secret
OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Storage
STORAGE_PATH=/app/static/exports
